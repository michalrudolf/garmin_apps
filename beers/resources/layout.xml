<layout id="Layout">
    <!-- Random message at top -->
    <label id="message_label"
           x="center"
           y="140"
           font="Graphics.FONT_XTINY"
           color="Graphics.COLOR_LT_GRAY"
           justification="Graphics.TEXT_JUSTIFY_CENTER" />
    
    <!-- Funky time display -->
    <label id="clock"
           x="center"
           y="80"
           color="Graphics.COLOR_WHITE"
           font="Graphics.FONT_SMALL"
           justification="Graphics.TEXT_JUSTIFY_CENTER" />
        
    <!-- Drink type icons -->
    <bitmap id="drink_icon"
           x="40"
           y="center"
           filename="images/icon_beer.png" />
                      
    <!-- Row 0 bitmaps -->
    <bitmap id="r0c0" x="125" y="center" filename="images/0.png"/>
    <bitmap id="r0c1" x="175" y="center" filename="images/0.png"/>
    <bitmap id="r0c2" x="225" y="center" filename="images/0.png"/>
    <bitmap id="r0c3" x="275" y="center" filename="images/0.png"/>
    
    <!-- Total and Session labels -->
    <label id="total_label"
           x="center"
           y="300"
           font="Graphics.FONT_XTINY"
           color="Graphics.COLOR_RED"
           justification="Graphics.TEXT_JUSTIFY_CENTER" />
           
    <label id="session_label"
           x="center"
           y="260"
           font="Graphics.FONT_TINY"
           color="Graphics.COLOR_WHITE"
           justification="Graphics.TEXT_JUSTIFY_CENTER" />
           
    <!-- Reset labels -->
    <label id="reset_session_label"
           x="center"
           y="center"
           font="Graphics.FONT_MEDIUM"
           color="Graphics.COLOR_WHITE"
           justification="Graphics.TEXT_JUSTIFY_CENTER" />
           
    <label id="reset_session_hard_label"
           x="center"
           y="center"
           font="Graphics.FONT_MEDIUM"
           color="Graphics.COLOR_WHITE"
           justification="Graphics.TEXT_JUSTIFY_CENTER" />
           
    <label id="reset_all_label"
           x="center"
           y="center"
           font="Graphics.FONT_SMALL"
           color="Graphics.COLOR_RED"
           justification="Graphics.TEXT_JUSTIFY_CENTER" />
</layout> 